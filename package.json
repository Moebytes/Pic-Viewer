{
  "name": "pic-viewer",
  "version": "1.0.0",
  "description": "A simple image viewer.",
  "main": "dist/main/index.js",
  "scripts": {
    "start": "npm run clean && rsbuild build && electron dist/main/index.js",
    "build": "npm run clean ./build && rsbuild build && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder -p never",
    "rebuild": "npm rebuild --runtime=electron --target=40.6.0 --disturl=https://atom.io/download/atom-shell --abi=143",
    "clean": "del-cli ./dist"
  },
  "keywords": [
    "photo",
    "viewer",
    "image",
    "photoshop",
    "anime",
    "cute"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Moebytes/Pic-Viewer"
  },
  "build": {
    "appId": "com.moebytes.pic-viewer",
    "productName": "Pic Viewer",
    "icon": "./assets/icon.png",
    "directories": {
      "buildResources": "assets",
      "output": "build"
    },
    "buildDependenciesFromSource": true,
    "asar": true,
    "asarUnpack": [
      "**/node_modules/sharp/**/*",
      "**/node_modules/@img/**/*"
    ],
    "mac": {
      "target": {
        "target": "dmg",
        "arch": "arm64"
      },
      "category": "public.app-category.graphics-design"
    },
    "dmg": {
      "title": "${productName}",
      "background": "./assets/background.png",
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "win": {
      "target": {
        "target": "nsis",
        "arch": "x64"
      }
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "uninstallDisplayName": "Pic Viewer",
      "createDesktopShortcut": "always",
      "installerSidebar": "./assets/installer.bmp",
      "uninstallerSidebar": "./assets/installer.bmp"
    },
    "linux": {
      "target": {
        "target": "appImage",
        "arch": "x64"
      },
      "category": "Graphics"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "publish": {
      "provider": "github",
      "repo": "Pic-Viewer",
      "owner": "Moebytes",
      "releaseType": "draft"
    },
    "fileAssociations": [
      {
        "ext": "jpg",
        "description": "JPG File"
      },
      {
        "ext": "jpeg",
        "description": "JPEG File"
      },
      {
        "ext": "png",
        "description": "PNG File"
      },
      {
        "ext": "webp",
        "description": "WEBP File"
      },
      {
        "ext": "avif",
        "description": "AVIF File"
      },
      {
        "ext": "tiff",
        "description": "TIFF File"
      },
      {
        "ext": "gif",
        "description": "GIF File"
      }
    ]
  },
  "author": "Moebytes",
  "license": "CC BY-NC 4.0",
  "devDependencies": {
    "@electron-rsbuild/plugin-main": "^0.0.12",
    "@electron-rsbuild/plugin-preload": "^0.0.12",
    "@electron-rsbuild/plugin-renderer": "^0.0.12",
    "@rsbuild/core": "^1.7.3",
    "@rsbuild/plugin-less": "^1.6.0",
    "@rsbuild/plugin-node-polyfill": "^1.4.4",
    "@rsbuild/plugin-react": "^1.4.5",
    "@rsbuild/plugin-type-check": "^1.3.3",
    "@svgr/webpack": "^8.1.0",
    "@types/electron-localshortcut": "^3.1.3",
    "@types/fluent-ffmpeg": "^2.1.28",
    "@types/get-pixels": "^3.3.4",
    "@types/gif-encoder": "^0.7.4",
    "@types/jquery": "^3.5.33",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@types/request": "^2.48.13",
    "@types/sharp": "^0.32.0",
    "@types/unzipper": "^0.10.11",
    "cross-env": "^10.1.0",
    "del-cli": "^7.0.0",
    "electron": "^40.6.0",
    "electron-builder": "^26.8.1",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.11.2",
    "axios": "^1.13.5",
    "bootstrap": "^5.3.8",
    "catenary-curve": "^1.0.1",
    "electron-click-drag-plugin": "^2.0.2",
    "electron-localshortcut": "^3.2.1",
    "electron-store": "^8.0.0",
    "gif-encoder": "^0.7.2",
    "gif-frames": "github:Moestash/gif-frames#no-cumulative",
    "image-pixels": "^2.2.2",
    "jquery": "^4.0.0",
    "lazy-brush": "^2.0.2",
    "pixiv.ts": "^0.8.8",
    "rc-slider": "^11.1.9",
    "react": "^19.2.4",
    "react-bootstrap": "^2.10.10",
    "react-dom": "^19.2.4",
    "react-dropzone": "^15.0.0",
    "react-image-crop": "github:Moestash/react-image-crop",
    "react-redux": "^9.2.0",
    "react-zoom-pan-pinch": "^3.7.0",
    "resize-observer-polyfill": "^1.5.1",
    "sharp": "^0.34.5",
    "unzipper": "^0.12.3"
  }
}
